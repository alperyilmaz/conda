# process all fastq files in a folder
# config file approach
configfile: "config_folder.yaml"

rule all:
    input: expand("mapped_reads_from_folder/{sample}.bam",sample=config["samples_in_folder"])

rule bwa_map:
    input:
        "data/genome.fa",
        "sequences/{sample}.fastq"
    output:
        "mapped_reads_from_folder/{sample}.bam"
    shell:
        "bwa mem {input} | samtools view -Sb - > {output}"

